@model PortalResidential_Web.Models.LogInViewModel

@{
    Layout = "~/Views/Shared/PublicLayout.cshtml";
    ViewBag.Title = "Log In";
}

    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Inicia Sesión</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.id_address, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.id_address, new SelectList(ViewBag.AddessList, "Value", "Text"), new { @class = "addres-dropdown", @style = "width:100%;" })
                                @Html.ValidationMessageFor(model => model.id_address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
                </section>
        </div>
    </div>


    <div>
        @Html.ActionLink("Regresar", "Index")
    </div>

<script>
    $('.addres-dropdown').prepend('<option selected></option>');
    $('.addres-dropdown').select2({
        placeholder: 'Selecciona tu domicilio.'
    });
</script>